{
  "name": "peersignal",
  "version": "0.1.2",
  "description": "PeerSignal client - WebRTC signaling with code-based pairing",
  "main": "index.js",
  "module": "index.js",
  "browser": "dist/peersignal.min.js",
  "unpkg": "dist/peersignal.min.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "browser": "./dist/peersignal.min.js"
    }
  },
  "files": [
    "index.js",
    "lib/",
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monteslu/peersignal.git"
  },
  "keywords": [
    "webrtc",
    "signaling",
    "peer",
    "p2p",
    "datachannel"
  ],
  "author": "Luis Montes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monteslu/peersignal/issues"
  },
  "homepage": "https://github.com/monteslu/peersignal#readme",
  "scripts": {
    "build": "esbuild index.js --bundle --minify --format=iife --global-name=PeerSignal --outfile=dist/peersignal.min.js --platform=browser --external:node-datachannel",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "dependencies": {
    "rawr": "^1.0.0",
    "socket.io-client": "^4.7.0",
    "debug": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "vitest": "^2.0.0"
  },
  "optionalDependencies": {
    "node-datachannel": "^0.32.0"
  }
}
